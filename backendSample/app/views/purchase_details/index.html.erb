<p id="notice"><%= notice %></p>

<div class="container">

  <h1>Purchase Details</h1>

  <table>
    <thead class="table">
      <tr>
        <th>Purchase</th>
        <th>Product</th>
        <th>Quantity</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @purchase_details.each do |purchase_detail| %>
        <tr>
          <td><%= purchase_detail.purchase_id %></td>
          <td><%= purchase_detail.product_id %></td>
          <td><%= purchase_detail.quantity %></td>
          <td><%= link_to 'Show', purchase_detail %></td>
          <td><%= link_to 'Edit', edit_purchase_detail_path(purchase_detail) %></td>
          <td><%= link_to 'Destroy', purchase_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Purchase Detail', new_purchase_detail_path, class: "btn btn-secondary btn-lg" %>
</div>
